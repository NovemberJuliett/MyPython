from PIL import Image
image = Image.open("monro.jpg")
red, green, blue = image.split()
shift = 25
image = Image.open('Red.jpg')
coordinates = (shift * 2, 0, image.width, image.height)
red1 = image.crop(coordinates) 
image = Image.open('Red.jpg')
coordinates = (shift, 0, image.width-shift, image.height)
red_left = image.crop(coordinates)
red_blend = Image.blend(red1, red_left, 0.3)
image = Image.open('Blue.jpg')
coordinates = (shift * 2, 0, image.width, image.height)
blue1 = image.crop(coordinates) 
image = Image.open('Blue.jpg')
coordinates = (shift, 0, image.width-shift, image.height)
blue_left = image.crop(coordinates)
blue_blend = Image.blend(blue_left, blue1, 0.3)
image = Image.open("Green.jpg")
coordinates = (shift, 0, image.width-shift, image.height)
green1 = image.crop(coordinates)
green1.save('green1.jpg')
new_image = Image.merge("RGB", (red_blend, green1, blue_blend))
new_image.save('monrothebest.jpg')
image = Image.open("monrothebest.jpg")
image.thumbnail((80, 80)) 
image.save('monro_avatar.jpg')
